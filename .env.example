# ===========================================
# Certify365 Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/certify365"

# Auth.js
AUTH_SECRET="generate-with-openssl-rand-base64-32"
AUTH_TRUST_HOST=true

# OAuth Providers
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""

# AI Services (pick one or both)
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# Email (Resend)
RESEND_API_KEY=""
EMAIL_FROM="Certify365 <noreply@certify365.com>"

# S3-Compatible Storage (Cloudflare R2, AWS S3, MinIO, etc.)
S3_ENDPOINT=""
S3_REGION="auto"
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_BUCKET="certify365"

# App
PUBLIC_APP_URL="http://localhost:5173"
PUBLIC_APP_NAME="Certify365"
